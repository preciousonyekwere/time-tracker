pipeline{
    agent {
  label 'slave2'
}
stages{
 stage('compilation') {
  steps {
    // One or more steps need to be included within the steps block.
    sh 'mvn -B compile'
  }
}
stage('SonarQube analysis') {
    steps {
    withSonarQubeEnv(credentialsId: 'sonarqube-key', installationName: 'sonarqube') { // You can override the credential to be used
      sh 'mvn org.sonarsource.scanner.maven:sonar-maven-plugin:3.7.0.1746:sonar'
    }
    }
  }
stage('mvn package') {
  steps {
    // One or more steps need to be included within the steps block.
    sh 'mvn package'
  }
}
stage('mvn jenkins deploy') {
  steps {
    // One or more steps need to be included within the steps block.
    sh 'cp /tmp/jenkins-data/workspace/pipeline-as-code/target/addressbook-2.0.war /var/lib/tomcat9/webapps/addressbook-precious'
  }
}
